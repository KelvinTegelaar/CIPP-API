    {
      "name": "SharepointLegacyAuthProtocolsEnabled",
      "API": "Graph",
      "URL": "https://graph.microsoft.com/v1.0/admin/sharepoint/settings?$select=isLegacyAuthProtocolsEnabled",
      "Parameters": {
        "asApp": "True"
      },
      "ExtractFields": [
        "isLegacyAuthProtocolsEnabled"
